MCS=mcs
DESTDIR=

all: linux

windows:
	$(CSC) /unsafe /target:library /out:glib-sharp.dll /recurse:*.cs

linux: glib-sharp.dll

glib-sharp.dll: *.cs
	$(MCS) --unsafe --target library -o glib-sharp.dll --recurse '*.cs'

clean:
	rm -f *.dll
	rm -rf generated

install: all
	cp glib-sharp.dll $(DESTDIR)@prefix@/lib || exit 1

