APIS = \
	atk-api.xml \
	pango-api.xml \
	gdk-api.xml \
	gdk-symbols.xml \
	gtk-api.xml \
	gtk-symbols.xml \
	glade-api.xml \
	art-api.xml \
	gnome-api.xml \
	gda-api.xml \
	gnomedb-api.xml

RUNTIME=mono 

all: generated-stamp

generated-stamp: $(APIS) ../generator/gapi_codegen.exe
	$(RUNTIME) ../generator/gapi_codegen.exe --generate $(APIS) && touch generated-stamp

clean:
	rm -f generated-stamp

prefix=@prefix@
DESTDIR=
apidir=$(DESTDIR)$(prefix)/share/gapi

install: all
	../mkinstalldirs $(apidir) && \
	cp $(APIS) $(apidir)
