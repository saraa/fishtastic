    <Member MemberName="DisplayDesktop">
      <MemberSignature Language="C#" Value="public static bool DisplayDesktop (Gnome.Program program, string doc_id, string file_name, string link_id);" />
      <MemberType>Method</MemberType>
      <ReturnValue>
